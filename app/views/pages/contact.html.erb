<div class="container">
  <!-- Hero Section -->
  <div class="hero-section fade-in-up">
    <h1 class="text-gradient display-4 fw-bold mb-3">
      <i class="bi bi-envelope me-3"></i>Contact Us
    </h1>
    <p class="lead text-muted mb-4">
      We'd love to hear from you. Get in touch with our team for support, feedback, or collaboration opportunities.
    </p>
  </div>

  <!-- Contact Form -->
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card fade-in-up">
        <div class="card-header">
          <h3 class="mb-0">
            <i class="bi bi-chat-dots me-2"></i>Send us a Message
          </h3>
        </div>
        <div class="card-body">
          <%= form_with url: contact_path, method: :post, local: true do |f| %>
            <div class="row g-3">
              <div class="col-md-6">
                <label for="name" class="form-label">Name</label>
                <%= f.text_field :name, class: "form-control", placeholder: "Your Name", required: true %>
              </div>
              <div class="col-md-6">
                <label for="email" class="form-label">Email</label>
                <%= f.email_field :email, class: "form-control", placeholder: "Your Email", required: true %>
              </div>
              <div class="col-12">
                <label for="message" class="form-label">Message</label>
                <%= f.text_area :message, class: "form-control", placeholder: "Tell us how we can help you...", rows: 5, required: true %>
              </div>
              <div class="col-12 text-center">
                <%= f.submit "Send Message", class: "btn btn-primary btn-lg" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Contact Information -->
  <div class="row g-4 mt-5">
    <div class="col-md-4 fade-in-up">
      <div class="card text-center h-100">
        <div class="card-body">
          <i class="bi bi-envelope text-primary fs-1 mb-3"></i>
          <h5>Email Support</h5>
          <p class="text-muted">support@ars-recipes.com</p>
          <small class="text-muted">24/7 AI-powered assistance</small>
        </div>
      </div>
    </div>
    <div class="col-md-4 fade-in-up">
      <div class="card text-center h-100">
        <div class="card-body">
          <i class="bi bi-chat-dots text-success fs-1 mb-3"></i>
          <h5>Live Chat</h5>
          <p class="text-muted">Available during business hours</p>
          <small class="text-muted">Get instant help from our team</small>
        </div>
      </div>
    </div>
    <div class="col-md-4 fade-in-up">
      <div class="card text-center h-100">
        <div class="card-body">
          <i class="bi bi-geo-alt text-warning fs-1 mb-3"></i>
          <h5>Global Community</h5>
          <p class="text-muted">Worldwide user base</p>
          <small class="text-muted">Connect with food lovers everywhere</small>
        </div>
      </div>
    </div>
  </div>
</div>
